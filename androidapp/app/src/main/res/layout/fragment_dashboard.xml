<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- First CardView on the left -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Image inside the CardView -->
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:src="@drawable/radion"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Second CardView on the left -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1"
        android:layout_marginTop="8dp">  <!-- Fixed here -->

        <!-- Image inside the CardView -->
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:src="@drawable/aradio"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Third CardView on the right -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Image inside the CardView -->
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:src="@drawable/kissfm"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Fourth CardView on the right -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card3"
        android:layout_marginTop="8dp">  <!-- Fixed here -->

        <!-- Image inside the CardView -->
        <ImageView
            android:id="@+id/icon4"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:src="@drawable/magic"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Fifth CardView on the left -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card2"
        android:layout_marginTop="8dp">  <!-- Fixed here -->

        <!-- Image inside the CardView -->
        <ImageView
            android:id="@+id/icon5"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:src="@drawable/tpm"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

    <!-- Sixth CardView on the right -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card4"
        android:layout_marginTop="8dp">  <!-- Fixed here -->

        <!-- Image inside the CardView -->
        <ImageView
            android:id="@+id/icon6"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:src="@drawable/son"
            android:padding="16dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
