<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragmentactivity.Fragment1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill form below"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Name"
            android:padding="12dp"
            android:minHeight="48dp"
            android:background="@android:drawable/edit_text"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_text_car_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:padding="12dp"
            android:minHeight="48dp"
            android:background="@android:drawable/edit_text"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/checkbox_is_electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electric"
            android:padding="12dp"
            android:minHeight="48dp" />
    </LinearLayout>

    <!-- Added ID to the Button -->
    <Button
        android:id="@+id/btn_visit_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit List"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp" />
</FrameLayout>
