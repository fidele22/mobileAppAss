<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/carNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter car name" />

    <EditText
        android:id="@+id/carPlaqueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter car plaque" />

    <EditText
        android:id="@+id/deliveredYearEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter delivered year" />

    <CheckBox
        android:id="@+id/isElectricCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is Electric?" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>